<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jlundho.projectzero.ProjectZeroApplication"
    android:background="@color/dark_spotify_green">

    <TextView
        android:id="@+id/text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Nanodegree Apps!"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/spotify_green_text"/>

    <Button
        android:id="@+id/movie_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVIE APP!"
        android:layout_below="@id/text_headline"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>

    <Button
        android:id="@+id/scores_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SCORES APP!"
        android:layout_below="@id/movie_app_button"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>

    <Button
        android:id="@+id/library_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LIBRARY APP!"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/scores_app_button"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>

    <Button
        android:id="@+id/buildItBigger_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BUILD IT BIGGER!"
        android:layout_below="@id/library_app_button"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>

    <Button
        android:id="@+id/xyz_reader_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="XYZ READER!"
        android:layout_below="@id/buildItBigger_app_button"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>

    <Button
        android:id="@+id/capstone_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CAPSTONE: MY OWN APP!"
        android:layout_below="@id/xyz_reader_button"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/text_headline"
        android:layout_alignEnd="@+id/text_headline"
        android:layout_alignLeft="@+id/text_headline"
        android:layout_alignStart="@+id/text_headline"
        android:background="@color/spotify_green"/>
</RelativeLayout>
